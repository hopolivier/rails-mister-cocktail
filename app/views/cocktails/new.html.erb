<!-- new.html.erb -->
<h1 class="text-center">Let's shake your imagination !</h1>
<div class="container">
  <%= simple_form_for(@cocktail) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.button :submit, input_html: {class: "text-center"} %>
    </div>
  <% end %>
</div>


<%= link_to 'Back', cocktails_path %>
